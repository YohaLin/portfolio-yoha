---
// MarkdownLayout.astro
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
  <article
    class="w-full max-w-none px-6 lg:px-8 py-10 lg:py-14 mx-auto
           prose prose-base lg:prose-lg"
  >
    <h3>{frontmatter.subtitle}</h3>
    <p>{frontmatter.pubDate.toLocaleDateString()}</p>
    <p><em>{frontmatter.description}</em></p>
    <p>Written by: {frontmatter.author}</p>

    {/* 封面圖片：置中、RWD、最大寬度 768px */}
    <img
      src={frontmatter.image.url}
      alt={frontmatter.image.alt}
      class="mx-auto my-6 h-auto w-full max-w-3xl rounded-lg"
    />

    <slot />

    {/* 如需 tag，取消註解 */}
    {
      /*
    <div class="flex flex-wrap gap-2 pt-6">
      {frontmatter.tags.map((tag: string) => (
        <a
          href={`/tags/${tag}`}
          class="rounded-full border border-gray-300 px-3 py-1 text-sm
                 hover:bg-gray-100 transition"
        >
          #{tag}
        </a>
      ))}
    </div>
    */
    }
  </article>
</BaseLayout>

<style>
  /* 全站連結色可自行調整 */
  a {
    color: #00539f;
  }
  img {
    max-width: 50%;
    height: auto;
  }
</style>
