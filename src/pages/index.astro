---
import BaseLayout from "../layouts/BaseLayout.astro";
import Contact from "./Contact";
import Prescription from "./Prescription";
import Skills from "./Skills";
import Works from "./Works";
---

<BaseLayout>
  <div class="grid grid-cols-1 lg:grid-cols-12 gap-[var(--my-border)]">
    <Works client:only="react" />

    <Skills client:only="react" />

    <Contact client:only="react" />

    <Prescription
      symptom="Clinical Uses"
      description="藉由 Astro 快速學習 MSW"
      subDescription="別等後端了！自己先做假資料吧～"
      className="col-span-1 lg:col-span-8"
    />
  </div>
</BaseLayout>
